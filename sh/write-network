#! /bin/sh
#
# Write the skeleton of the webpage for one network. 
#
# PARAMETERS
#	$network
#
# STDOUT
#	Content is written here
#
# INPUT FILES
#	dat/STATISTICS
#

cat <<EOF
<H1>$network</H1>
<P>
	This is the network '$network'.
</P>
<P>
EOF

<uni/meta."$network" sed -E -e 's,^\s*long-description\s*:\s*,,;t;d'

cat <<EOF
</P>

<H2>Metadata</H2>
<TABLE>
	<TR><TD>Internal name <TD>$network
</TABLE>

<H2>Statistics</H2>
<TABLE>
EOF

while IFS= read -r statistic
do
	if [ -e dat/statistic."$statistic"."$network" ] ; then
		value=$(<dat/statistic."$statistic"."$network" head -1)
		echo "<TR><TD>$statistic</TD><TD>$value</TD></TR>"
	fi
done <dat/STATISTICS

cat <<EOF
</TABLE>
EOF
