##	filename=dat/statistic."$statistic"."$network"
##	[ -e "$filename" ] || continue
##	value=$(head -1 "$filename")
##	cat <<EOF
##<TR><TD><A HREF="../../networks/$network/">$(field=name sh/read-meta)</A>	<TD>$value
##EOF
##done
##cat <<EOF
##</TABLE>

##EOF
